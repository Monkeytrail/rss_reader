---
import { formatRelativeDate, truncate } from '../lib/utils';

interface Props {
  id: string;
  title: string;
  link: string;
  pubDate: Date;
  summary?: string;
  feedUrl: string;
  feedTitle: string;
  feedFavicon: string;
  category: string;
  categorySlug: string;
  thumbnail?: string;
  videoId?: string;
}

const { id, title, link, pubDate, summary, feedUrl, feedTitle, feedFavicon, category, categorySlug, thumbnail, videoId } = Astro.props;

const searchableText = [title, feedTitle, category, summary].filter(Boolean).join(' ');
const relativeDate = formatRelativeDate(pubDate);
---

<article class="video-card" data-searchable={searchableText} data-article-id={id} data-feed-url={feedUrl}>
  {thumbnail && (
    <button
      class="video-thumbnail"
      data-video-id={videoId}
      aria-label={`Play ${title}`}
    >
      <img src={thumbnail} alt="" loading="lazy" width="320" height="180" />
      <span class="play-button">&#9654;</span>
    </button>
  )}

  <div class="video-info">
    <h3 class="video-title">
      <a href={link} target="_blank" rel="noopener noreferrer">{title}</a>
    </h3>

    <div class="video-meta">
      <img src={feedFavicon} alt="" class="feed-icon" width="16" height="16" loading="lazy" />
      <span class="feed-title">{feedTitle}</span>
      <span class="separator">&middot;</span>
      <time datetime={pubDate.toISOString()}>{relativeDate}</time>
      <span class="separator">&middot;</span>
      <a href={`/category/${categorySlug}`} class="category-tag">{category}</a>
    </div>

    {summary && <p class="video-summary">{truncate(summary, 120)}</p>}

    <div class="video-actions">
      <a href={link} target="_blank" rel="noopener noreferrer" class="action-link">
        YouTube &#8599;
      </a>
      {videoId && (
        <button class="action-button play-in-app" data-video-id={videoId} data-title={title}>
          Watch in app
        </button>
      )}
    </div>
  </div>
</article>

<style>
  .video-card {
    display: grid;
    grid-template-columns: 160px 1fr;
    gap: var(--space-md);
    padding: var(--space-md) 0;
    border-bottom: 1px solid var(--color-border);
  }

  @media (min-width: 600px) {
    .video-card {
      grid-template-columns: 200px 1fr;
    }
  }

  @media (max-width: 500px) {
    .video-card {
      grid-template-columns: 1fr;
    }
  }

  .video-thumbnail {
    position: relative;
    aspect-ratio: 16 / 9;
    border-radius: 8px;
    overflow: hidden;
    cursor: pointer;
    border: none;
    padding: 0;
    background: var(--color-bg-secondary);
  }

  .video-thumbnail img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.2s;
  }

  .video-thumbnail:hover img {
    transform: scale(1.05);
  }

  .play-button {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 48px;
    height: 48px;
    background: rgba(0, 0, 0, 0.7);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: white;
    font-size: 18px;
    transition: background 0.2s;
  }

  .video-thumbnail:hover .play-button {
    background: rgba(255, 0, 0, 0.9);
  }

  .video-info {
    display: flex;
    flex-direction: column;
    gap: var(--space-xs);
  }

  .video-title {
    font-size: var(--font-size-base);
    font-weight: 500;
    line-height: 1.3;
    margin: 0;
  }

  .video-title a {
    color: var(--color-text);
    text-decoration: none;
  }

  .video-title a:hover {
    color: var(--color-accent);
  }

  .video-meta {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    color: var(--color-text-secondary);
    font-size: var(--font-size-sm);
    flex-wrap: wrap;
  }

  .feed-icon {
    width: 16px;
    height: 16px;
    border-radius: 2px;
  }

  .separator {
    opacity: 0.5;
  }

  .video-summary {
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
    margin: 0;
    line-height: 1.4;
  }

  .video-actions {
    display: flex;
    gap: var(--space-md);
    margin-top: auto;
    padding-top: var(--space-xs);
  }

  .action-link,
  .action-button {
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
    text-decoration: none;
    background: none;
    border: none;
    padding: 0;
    cursor: pointer;
  }

  .action-link:hover,
  .action-button:hover {
    color: var(--color-accent);
  }
</style>
