<!doctype html>
<html lang="nl">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Login - RSS Reader" />
    <link rel="icon" type="image/x-icon" href="/favicon.ico" />
    <title>Login - RSS Reader</title>

    <script is:inline>
      const t = localStorage.getItem('theme');
      if (t) document.documentElement.setAttribute('data-theme', t);
    </script>

    <script src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>

    <style>
      :root {
        --color-bg: #fafafa;
        --color-text: #1a1a1a;
        --color-text-secondary: #666;
        --color-accent: #0066cc;
        --color-border: #e0e0e0;
      }

      [data-theme="dark"] {
        --color-bg: #1a1a1a;
        --color-text: #e0e0e0;
        --color-text-secondary: #999;
        --color-accent: #4d9fff;
        --color-border: #333;
      }

      @media (prefers-color-scheme: dark) {
        :root:not([data-theme="light"]) {
          --color-bg: #1a1a1a;
          --color-text: #e0e0e0;
          --color-text-secondary: #999;
          --color-accent: #4d9fff;
          --color-border: #333;
        }
      }

      * { margin: 0; padding: 0; box-sizing: border-box; }

      body {
        font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, sans-serif;
        background: var(--color-bg);
        color: var(--color-text);
        display: flex;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
      }

      .login-card {
        text-align: center;
        padding: 3rem 2rem;
        max-width: 360px;
        width: 100%;
      }

      .login-card h1 {
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
      }

      .login-card p {
        color: var(--color-text-secondary);
        margin-bottom: 2rem;
        font-size: 0.95rem;
      }

      .login-btn {
        display: inline-block;
        padding: 0.75rem 2rem;
        background: var(--color-accent);
        color: #fff;
        border: none;
        border-radius: 8px;
        font-size: 1rem;
        font-weight: 500;
        cursor: pointer;
        transition: opacity 0.15s;
      }

      .login-btn:hover {
        opacity: 0.9;
      }
    </style>
  </head>
  <body>
    <div class="login-card">
      <h1>Reader</h1>
      <p>Log in to access your feeds.</p>
      <button class="login-btn" id="login-btn">Log in</button>
    </div>

    <script is:inline>
      // If already logged in, redirect to home
      try {
        var user = localStorage.getItem('gotrue.user');
        if (user && user !== 'null') {
          window.location.replace('/');
        }
      } catch (e) {}

      // Handle login
      document.getElementById('login-btn').addEventListener('click', function () {
        if (window.netlifyIdentity) {
          window.netlifyIdentity.open('login');
        }
      });

      // On successful login, redirect to home
      if (window.netlifyIdentity) {
        window.netlifyIdentity.on('login', function () {
          window.location.replace('/');
        });
      }

      // Handle invite/confirmation tokens in URL hash
      if (window.location.hash) {
        var hash = window.location.hash;
        if (hash.includes('confirmation_token') || hash.includes('recovery_token') || hash.includes('invite_token')) {
          if (window.netlifyIdentity) {
            window.netlifyIdentity.open();
          }
        }
      }
    </script>
  </body>
</html>
